{
  "name": "music-scheduler",
  "private": true,
  "version": "1.0.0",
  "description": "Music Scheduler Desktop App",
  "author": "Fatkhi",
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
  "dev": "vite",
  "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
  "build": "vite build",
  "start": "electron .",
  "dist": "npm run build && cross-env NODE_ENV=production electron-builder",
  "dist:mac": "npm run build && cross-env NODE_ENV=production electron-builder --mac",
  "dist:win": "npm run build && cross-env NODE_ENV=production electron-builder --win",
  "dist:linux": "npm run build && cross-env NODE_ENV=production electron-builder --linux"
}
,
  "dependencies": {
    "@tailwindcss/vite": "^4.0.9",
    "date-fns": "^4.1.0",
    "electron-store": "^10.0.1",
    "node-schedule": "^2.1.1",
    "react": "^19.0.0",
    "react-datepicker": "^8.1.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^4.0.9"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^34.3.0",
    "electron-builder": "^25.1.8",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "vite": "^6.2.0",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.fatkhi.musicscheduler",
    "productName": "Music Scheduler",
    "copyright": "Copyright Â© 2025 Fatkhi",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "category": "public.app-category.music",
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets"
    }
  }
}
